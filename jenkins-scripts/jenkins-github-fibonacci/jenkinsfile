pipeline {
    agent {
        label 'windows' // Specify Windows agent
    }
    parameters {
        choice(name: 'NUMBER',
            choices: [10,20,30,40,50,60,70,80,90],
            description: 'Select the value for F(n) for the Fibonacci sequence.')
    }
    options {
        buildDiscarder(logRotator(daysToKeepStr: '10', numToKeepStr: '10'))
        timeout(time: 12, unit: 'HOURS')
        timestamps()
    }
    triggers {
        cron '@midnight'
    }
    stages {
        stage('Make executable') {
            steps {
                // Windows doesn't need chmod, but we can verify the file exists
                bat 'if exist jenkins-scripts\\jenkins-github-fibonacci\\scripts\\fibonacci.ps1 (echo File exists) else (echo File not found && exit 1)'
            }
        }
        stage('Relative path') {
            steps {
                bat "jenkins-scripts\\jenkins-github-fibonacci\\scripts\\fibonacci.ps1 ${env.NUMBER}"
            }
        }
        stage('Full path') {
            steps {
                bat "\"%WORKSPACE%\\jenkins-scripts\\jenkins-github-fibonacci\\scripts\\fibonacci.ps1" ${env.NUMBER}"
            }
        }
        stage('Change directory') {
            steps {
                dir("${env.WORKSPACE}\\jenkins-scripts\\jenkins-github-fibonacci\\scripts\\") {
                    bat "fibonacci.ps1 ${env.NUMBER}"
                }
            }
        }
    }
}
